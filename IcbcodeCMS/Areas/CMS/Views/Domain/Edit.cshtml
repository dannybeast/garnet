@{
    ViewBag.Title = ViewBag.item == null ? "Добавление нового домена" : "Редактирование домена";
    Layout = "~/Areas/CMS/Views/Shared/_LayoutMain.cshtml";
}

<div id="breadcrumbs">
    <a href="@Url.Action("Index", "Domain")">Домены</a><span>&rarr;</span> 
    <span><b>@ViewBag.Title</b></span> 
</div>

<form action="@Url.Action("Edit", "Domain")" method="post">
    <input type="hidden" name="domain_id" value="@(ViewBag.item == null ? null : ViewBag.item.domain_id)" />
    <table class="edit_table" width="100%"  cellpadding="0" cellspacing="0">
        <tr>
            <td class="first"><b>Наименование:</b></td>
            <td>
                <input type="text" name="domain_name" value="@(ViewBag.item == null ? null : ViewBag.item.domain_name)" class="text_type required" />
            </td>
        </tr>
        <tr>
            <td class="first">Комментарий:</td>
            <td>
                <input type="text" name="domain_comment" value="@(ViewBag.item == null ? null : ViewBag.item.domain_comment)" class="text_type" />
            </td>
        </tr>
        <tr>
            <td class="first"></td>
            <td>
                <button type="submit" class="button_element" onclick="return isValidForm();">Сохранить</button>
                <button type="button" class="button_element" onclick="location.href='@Url.Action("Index")'">Отмена</button>
            </td>
        </tr>
    </table>
</form>