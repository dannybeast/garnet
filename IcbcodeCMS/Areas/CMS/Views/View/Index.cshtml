@{
    ViewBag.Title = "Представление";
    Layout = "~/Areas/CMS/Views/Shared/_LayoutMain.cshtml";
}

<div id="nav_panel">
    <a href="@Url.Action("Edit", "View")"><button class="button_element">Добавить представление</button></a>
</div>

@if (ViewBag.items.Count == 0)
{
<p><b>Данных нет</b></p>
}
else
{
<table class="content_table" width="100%"  cellpadding="0" cellspacing="0">
    <tr class="ui-widget-header">
        <th class="first">Наименование</th>
        <th class="first">Объявление</th>
        <th class="first">Путь к представлению</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
    </tr>
    <tbody class="sortable" data-update-url="@Url.Action("UpdateOrder", "View")">
    @foreach (var item in ViewBag.items)
    {
    <tr>
        <td class="first">
            @item.view_friendly_name
            <input type="hidden" name="id" value="@item.view_id" />
        </td>
        <td class="first">@item.view_name</td>
        <td class="first">@item.view_path</td>
        <td><a href="@Url.Action("Edit", "View", new { view_id = item.view_id })">Редактировать</a></td>
        <td>
            <a onclick="return confirm('Вы уверены что хотите удалить шаблон?');" href="@Url.Action("Remove", "View", new { view_id = item.view_id })">Удалить</a>
        </td>
    </tr>
    }
    </tbody>
</table>
}