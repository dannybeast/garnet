@model IcbcodeContent
@{
    var advantages = IcbcodeContent.Get(new string[] { "preimuschestva" });

    var products = IcbcodeContent.Get(new string[] { "produkciya" });

    var sliders = IcbcodeContent.Get(new string[] { "slajder" });

    var news = IcbcodeContent.Get(new string[] { "novosti" }, order_fields: "content_publish desc, content_id desc");

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="intro" data-emergence="hidden">
  <div class="container">
    <div class="intro__play" data-video-play>
      <svg class="svg-icon">
        <use href="~/Front/dist/assets/icons/sprite.svg#icon-pause"></use>
      </svg>
      <svg class="svg-icon">
        <use href="~/Front/dist/assets/icons/sprite.svg#icon-play"></use>
      </svg>
    </div>
    <div class="intro__row"> 
      <div class="intro__content">
        <h1 class="intro__title">Кубанское яблоко –<br/> вкус, знакомый<br/> с детства
        </h1>
        <div class="intro__buttons"><a class="intro-button" href="~/o-kompanii"><span>Подробнее о нас</span><span class="intro-button__icon"><img src="~/Front/dist/assets/images/icons/apple-details.png" alt=""></span></a>
        </div>
      </div>
      <div class="intro__news"> <a class="intro__news-title" href="~/novosti">Новости</a>
        <div class="intro__slider js-swiper-news swiper-no-swiping">
          <div class="swiper-wrapper">
          @foreach (var item in news)
            {
             var image = item.GetImage();
            <div class="swiper-slide"><a class="news-intro-item" href="@item.Url"> <span class="news-intro-item__image">
