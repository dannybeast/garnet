                <use href="~/Front/dist/assets/icons/sprite.svg#icon-left-arrow"></use>
              </svg></span></span></a>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
  <video class="intro__video" poster="~/Front/dist/assets/images/video.jpg" src="~/Front/dist/assets/images/video.mp4" playsinline muted autoplay loop data-video>
  </video>
</section>
<article class="gray">
    <section class="advantages" data-emergence="hidden">
        <div class="container">
            <div class="advantages__slider js-swiper-advantages swiper-no-swiping">
                <div class="swiper-wrapper">
                    @foreach (var item in advantages)
                    {
                        var image = item.GetImage();

                        <div class="swiper-slide">
                            <div class="advantage-item">
                                <div class="advantage-item__content">
                                    <div class="advantage-item__icon">
                                        <img src="@(image?.Url)" />
                                    </div>
                                    <p class="advantage-item__title">
                                        @Html.Raw(item.Name)
                                    </p>
                                    <div class="advantage-item__desc">
                                        @Html.Raw(item.ShortText)
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <div class="quote-right">
        <div><img src="~/Front/dist/assets/images/quotes/quote-right.png" alt=""></div>
    </div>
</article>
<section class="about" data-emergence="hidden">
    <div class="container">
        <div class="about__row">
            <div class="about__col">
                <p class="subtitle color-primary">
                    Узнайте
                </p>
                <h2 class="title">
                    @Model.H2
                </h2>
                <div class="typography">
                    @Html.Raw(Model.ShortText)
                </div>
                <div class="about__buttons">
                    <a class="btn btn--line-primary" href="~/o-kompanii">Подробнее</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="apple-slider" data-emergence="hidden">
    <div class="container">
        <div class="swiper-container js-swiper-apple">
            <div class="swiper-wrapper">
                @foreach (var item in sliders)
                {
                    var image = item.GetImage();

                    <div class="swiper-slide">
                        @if (item.IsRedirect)
                        {
                            <a href="@item.Url"><img src="@(image?.Url)?w=716&h=801&mode=crop" alt="@(image?.Description)"><div class="apple-slider__desc"><p>@item.Name</p></div></a>
                        }
                        else
                        {
                            <img src="@(image?.Url)?w=716&h=801&mode=crop" alt="@(image?.Description)"><div class="apple-slider__desc"><p>@item.Name</p></div>
                        }
                    </div>
                }
            </div>
        </div>
        <div class="swiper-prev">
            <svg class="svg-icon">
                <use href="~/Front/dist/assets/icons/sprite.svg#icon-001-right"></use>
            </svg>
        </div>
        <div class="swiper-next">
            <svg class="svg-icon">
                <use href="~/Front/dist/assets/icons/sprite.svg#icon-001-right"></use>
            </svg>
        </div>
        <div class="slider-dots"></div>
    </div>
</section>
