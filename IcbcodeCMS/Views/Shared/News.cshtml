@model IcbcodeContent
@{
    var items = IcbcodeContent.Get(new string[] { "novosti" }, order_fields: "content_publish desc, content_id desc");

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page__content">
    <section class="news-list">
