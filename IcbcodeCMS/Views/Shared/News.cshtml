                <a class="news-item" href="@item.Url">
                    <span class="news-item__content">
                        <p class="news-item__title">
                            @item.Link
                        </p>
                        <p class="news-item__date">
                            @item.Publish.Value.ToString("dd/MM/yyyy")
                        </p>
                        <div class="typography">
                            @Html.Raw(item.ShortText)
                        </div>
                    </span>
                    <span class="news-item__image">
